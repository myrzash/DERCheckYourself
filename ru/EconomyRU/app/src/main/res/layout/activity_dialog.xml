<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/containerFragmentTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent_dark"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:rotation="180">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_normal"
            android:layout_weight="1"
            android:id="@+id/imageMainMenu2"
            android:src="@mipmap/eng_button_mainmenu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_normal"
            android:layout_weight="1"
            android:id="@+id/imageRestart2"
            android:src="@mipmap/eng_button_restart" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_normal"
            android:layout_weight="1"
            android:id="@+id/imageContinue2"
            android:src="@mipmap/eng_button_continue" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_dino_2" />

    <LinearLayout
        android:id="@+id/containerFragmentBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent_dark"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_normal"
            android:layout_weight="1"
            android:src="@mipmap/eng_button_mainmenu" />

        <ImageView
            android:id="@+id/imageRestart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_normal"
            android:layout_weight="1"
            android:src="@mipmap/eng_button_restart" />

        <ImageView
            android:id="@+id/imageContinue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_normal"
            android:layout_weight="1"
            android:src="@mipmap/eng_button_continue" />

    </LinearLayout>
</LinearLayout>
